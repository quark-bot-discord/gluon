{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "allowJs": true, // Allow JavaScript files
    "checkJs": false, // Check JavaScript files with TypeScript
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "typings/*": ["typings/*"],
      "src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "index.js",
    "package.json",
    "typings/**/*"
  ],
  "exclude": ["node_modules", "dist", "test/setup.js"]
}
